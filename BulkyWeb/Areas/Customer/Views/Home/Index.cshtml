@model IEnumerable<Product>

<div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 border-0 shadow-sm border-top border-5 rounded p-3">
                @if (product.ProductImages != null && product.ProductImages.Count() > 0)
                {
                    <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                }
                else
                {
                    <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                }

                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                        <p class="card-title text-warning text-center">Tác giả: <b>@product.Author</b></p>
                    </div>
                    <div class="mt-3">
                        <p class="text-dark text-opacity-75 text-center mb-0">
                            Giá:
                            <span>
                                @product.ListPrice.ToString("c", new System.Globalization.CultureInfo("vi-VN"))
                            </span>
                        </p>
                    </div>
                </div>
                <div>
                    <a asp-action="Details"
                       asp-route-productId="@product.Id"
                       class="btn btn-primary bg-gradient border-0 form-control mt-3">
                        Chi tiết
                    </a>
                </div>
            </div>
        </div>
    }
</div>
